<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetable Service Engine"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="28dp"
        android:layout_marginTop="200px"
        android:textSize="20dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/addVegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Vegetable"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="86dp"
        android:layout_marginTop="50px"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/modifyVegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="184dp"
        android:layout_marginTop="50px"
        app:layout_constraintTop_toBottomOf="@id/addVegetable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/sellVegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_marginTop="50px"
        app:layout_constraintTop_toBottomOf="@id/modifyVegetable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>